<body>
    <!-- Simple View Count -->
    <div class="wrap">
        <span id="count">0</span>
        <p>Views</p>
        <button id="btn">Click Me</button>
    </div>
    
    <script>
        function $(id){
            return document.getElementById(id);
        }

        $("btn").addEventListener('click', ()=>{
            var count = $("count");
            count.innerHTML++;
        });
    </script>
